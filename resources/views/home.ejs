<section class="menu container mx-auto py-8 mb-10">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-xl font-bold">All Burgers</h1>
        <div class="float-right border border-gray-500 px-2 py-2 flex items-center cursor-pointer rounded-full filter hover:bg-gray-100">
            <span class="text-sm text-gray-800 font-bold mr-2">Filter</span>
            <img class="filter-icon" src="data:image/svg+xml;base64," />
            <!--<div>Icons made by <a href="https://www.flaticon.com/authors/google" title="Google">Google</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>-->  
        </div>
    </div>
    
    <form action="/" method="GET">
        <% if(large || medium || small || queryPrice) {%>
        <div id="filter-tab" class="flex items-center justify-center mb-8 border border-gray-500 rounded-full bg-gray-100 py-4 px-4">
        <% } else { %>
        <div id="filter-tab" class="flex items-center justify-center mb-8 border border-gray-500 rounded-full bg-gray-100 py-4 px-4 hidden">
        <% } %>
            <div class="flex items-center px-2">
                <% if(large) { %>
                    <input type="checkbox" name="size" class="mr-2" value="<%= large %>" checked>
                <% } else { %>
                    <input type="checkbox" name="size" class="mr-2" value="large">
                <% } %>
                <label class="text-sm">large</label>
            </div>
            <div class="flex items-center px-2">
                <% if(medium) { %>
                    <input type="checkbox" name="size" class="mr-2" value="<%= medium %>" checked>
                <% } else { %>
                    <input type="checkbox" name="size" class="mr-2" value="medium">
                <% } %>
                <label class="text-sm">medium</label>
            </div>
            <div class="flex items-center px-2">
                <% if(small) { %>
                    <input type="checkbox" name="size" class="mr-2" value="<%= small %>" checked>
                <% } else { %>
                    <input type="checkbox" name="size" class="mr-2" value="small">
                <% } %>
                <label class="text-sm">small</label>
            </div>
            <div id="price-selector" class="flex items-center px-2">
                <% if(queryPrice) { %>
                    <input class="mr-2 price-range" name="price[lte]" type="range" min="200" max="1000" step="100" value="<%= queryPrice %>"/>
                    <label class="text-sm">price is less than or equal to <span id="filtered-price" class="font-bold"><%= queryPrice %><span></label>
                <% } else { %>
                    <input class="mr-2 price-range" name="price[lte]" type="range" min="200" max="1000" step="100" value="300"/>
                    <label class="text-sm">price is less than or equal to <span id="filtered-price" class="font-bold">300<span></label>
                <% } %>  
            </div>
            <button type="submit"class="bg-blue-500 hover:bg-blue-700 text-white text-center px-4 text-sm rounded-full ml-2 py-1 my-2 md:my-0">filter</button>
            <a href="/" class="bg-transparent bg-gray-300 hover:bg-gray-400 text-black text-center px-4 text-sm rounded-full ml-2 py-1">Reset</a>
        </div>
    </form>
    <% if(large || medium || small || queryPrice) {%>
        <div class="text-xs md:text:sm mb-4 px-5"><%= count %> results found </div>
    <% } %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <% burgers.forEach(function(burger){ %>
            <div class="w-full md:w-64">
            <div>
                <img class="h-40 mb-4 mx-auto lozad" data-src="/img/<%= burger.image %>" alt="burger">
            </div>
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= burger.name %></h2>
                <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= burger.size %></span>
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">$<%= burger.price %></span>
                    <button data-burger="<%= JSON.stringify(burger) %>" data-id="add-to-cart<%= burger._id %>" class="add-to-cart add-to-cart-home rounded-full px-6 py-1 flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-3">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% });  %>   
    </span>
</section>