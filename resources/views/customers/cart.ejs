<section class="cart py-16">
    <% if(session.cart) { %>
    <div class="order container mx-auto w-1/2">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="cart">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <% for(let pizza of Object.values(session.cart.items)) { %>
                <div id="item<%= pizza.item._id %>" class="flex my-8">
                    <div class="w-2/5 flex items-center">
                        <img class="w-24" src="/img/<%= pizza.item.image %>" alt="pizza">
                        <div class="ml-4">
                            <h1 class="font-bold"><%= pizza.item.name %></h1>
                            <span><%= pizza.item.size %></span>
                        </div>
                    </div>
                    <div class="w-2/5 flex items-center justify-center">
                        <div class="p-2 m-0 border text-center bg-gray-800 hover:bg-gray-900 cursor-pointer remove-from-cart" data-id="remove-from-cart<%= pizza.item._id %>" data-burger="<%= JSON.stringify(pizza.item) %>">
                            <span class="text-white">&#8722;</span>
                        </div>
                        <div class="p-2 m-0 border">
                            <span id="<%= pizza.item._id %>" class="font-bold qtyCounter"><%= session.cart.items[pizza.item._id].qty %></span>
                        </div>
                        <div class="p-2 m-0 border text-center bg-gray-800 hover:bg-gray-900 cursor-pointer add-to-cart" data-id="add-to-cart<%= pizza.item._id %>" data-burger="<%= JSON.stringify(pizza.item) %>">
                            <span class="text-white">+</span>
                        </div>
                    </div>
                    <span id="price<%= pizza.item._id %>" class="w-1/5 flex items-center justify-center font-bold">$<%= pizza.item.price * session.cart.items[pizza.item._id].qty %></span>
                    <span class="w-1/5 flex items-center justify-center font-bold remove-selected-item-from-cart cursor-pointer" data-id="remove-selected-item-from-cart<%= pizza.item._id %>" data-burger="<%= JSON.stringify(pizza.item) %>">‚ùå</span>
                </div>
            <% } %>
        </div>
        <hr>
        <div class="text-right">
            <div>
                <span class="text-lg font-bold">Total Amount: </span>
                <span id="totalPrice" class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>
            </div>
            <div>
                <form action="" class="mt-12">
                    <input type="text" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone number"/>
                    <input type="text" class="border border-gray-400 p-2 w-1/2" placeholder="Address"/>
                    <div>
                        <!--<button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 text-white">Order Now</button>-->
                    </div>
                </form>
            </div>
            <a href="" class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6 text-white inline-block cursor-pointer">Login to Continue</a>
        </div>
    </div>
    <% } else { %>
    <div class="empty-cart py-16">
        <div class="container mx-auto text-center">

            <h1 class="text-3xl font-bold mb-2">
            Cart EmptyüôÅ
            </h1>

            <p class="text-gray-500 text-lg mb-12">Yo probably haven't order a pizza yet.<br/> To order a pizza, go to the main page</p>

            <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="empty-cart">

            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12">Go back</a>
        </div>
    </div>
    <% } %>
</section>