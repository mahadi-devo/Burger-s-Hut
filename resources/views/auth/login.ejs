<section class="login flex justify-center items-center">
    <div class="login hidden md:block bg-gradient-to-r from-red-400 to-red-500 rounded-lg p-5">
        <div class="font-bold text-white p-2">Guet Credentials</div>
        <hr>
        <div class="text-white mt-2 py-2">Email : <b>guest@gmail.com</b></div>
        <div class="text-white mt-2 py-2">Password : <b>Guest123</b></div> 
    </div>
    <div class="w-full max-w-md p-2 m2-2">
    <form action="/login" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
        <span class="text-red-500 text-sm"><%= error %></span>
        <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
            Email
        </label>
        <input name="email"
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="username" type="email" placeholder="Enter your email" value="<%= messages.email %>">
        </div>
        <div class="mb-6">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
            Password
        </label>
        <input name="password"
        class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="******************">
        </div>
        <div class="flex items-center justify-between">
        <button class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
            Log In
        </button>
        <a class="inline-block align-baseline font-bold text-sm" href="/register">
            Don't have an account?
        </a>
        </div>
    </form>
    <p class="md:hidden text-xs text-red-600 text-center"><a href="https://github.com/mahadi-devo/Burger-s-Hut#login-credentials" target="_blank">Demo Credentials Can Find Here</a></p>
    </div>
    </div>
        <div class="hidden md:block login bg-gradient-to-r from-red-400 to-red-500 rounded-lg p-5">
        <div class="font-bold text-white p-2">Admin Credentials</div>
        <hr>
        <div class="text-white mt-2 py-2">Email : <b>admin@gmail.com</b></div>
        <div class="text-white mt-2 py-2">Password : <b>Admin123</b></div> 
    </div>
</section>

